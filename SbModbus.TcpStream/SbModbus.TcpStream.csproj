<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1;net462;net472;net48;net6.0;net8.0</TargetFrameworks>
		<Nullable>enable</Nullable>
		<LangVersion>preview</LangVersion>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<AssemblyName>SbModbus.TcpStream</AssemblyName>
		<PackageId>SbModbus.TcpStream</PackageId>
		<PackageTags>Modbus,Iot</PackageTags>
		<Description>Probably the best performing Modbus library</Description>
		<PackageProjectUrl>https://github.com/u2sb/SbModbus.git</PackageProjectUrl>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<Title>SbModbus.TcpStream</Title>
		<Authors>MonoLogueChi</Authors>
		<Company>U2SB</Company>
		<RepositoryUrl>https://github.com/u2sb/SbModbus.git</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageIcon>avatar.png</PackageIcon>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<Copyright>U2SB</Copyright>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\icons\avatar.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="CavemanTcp" Version="2.0.9" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\SbModbus\SbModbus.csproj" />
	</ItemGroup>
</Project>