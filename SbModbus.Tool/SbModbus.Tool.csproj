<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    <LangVersion>14</LangVersion>
    <ApplicationIcon>Assets\icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Reflection.AssemblyMetadataAttribute">
      <_Parameter1>ProjectRoot</_Parameter1>
      <_Parameter2>$(MSBuildProjectDirectory)</_Parameter2>
    </AssemblyAttribute>
  </ItemGroup>

  <ItemGroup>
    <AvaloniaResource Include="Assets\**"/>
    <Folder Include="Views\UserControls\"/>
    <Folder Include="Views\Windows\PopUps\"/>
  </ItemGroup>

  <ItemGroup>
    <None Update="Settings\**">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>

    <None Update="i18n\**\*.yml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="12.0.999-cibuild0060096-alpha"/>
    <PackageReference Include="Avalonia.Desktop" Version="12.0.999-cibuild0060096-alpha"/>
    <PackageReference Include="Avalonia.Themes.Fluent" Version="12.0.999-cibuild0060096-alpha"/>
    <PackageReference Include="Avalonia.Fonts.Inter" Version="12.0.999-cibuild0060096-alpha"/>
    <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
    <PackageReference Include="Avalonia.Diagnostics" Version="12.0.999-cibuild0060096-alpha">
      <IncludeAssets Condition="'$(Configuration)' != 'Debug'">None</IncludeAssets>
      <PrivateAssets Condition="'$(Configuration)' != 'Debug'">All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="AvaloniaUI.DiagnosticsSupport" Version="2.1.1" />
    <PackageReference Include="CircularBuffer" Version="1.4.0"/>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0"/>
    <PackageReference Include="Material.Avalonia" Version="3.13.3"/>
    <PackageReference Include="Material.Avalonia.Dialogs" Version="3.13.3"/>
    <PackageReference Include="NetCoreServer" Version="8.0.7"/>
    <PackageReference Include="ObservableCollections" Version="3.3.4"/>
    <PackageReference Include="ObservableCollections.R3" Version="3.3.4"/>
    <PackageReference Include="R3Extensions.Avalonia" Version="1.3.0"/>
    <PackageReference Include="ScottPlot.Avalonia" Version="5.1.57"/>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="10.0.0"/>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="10.0.0"/>
    <PackageReference Include="R3" Version="1.3.0"/>
    <PackageReference Include="System.IO.Ports" Version="10.0.0"/>
    <PackageReference Include="Utf8StringInterpolation" Version="1.3.2"/>
    <PackageReference Include="VYaml" Version="1.2.0"/>
    <PackageReference Include="ZeroMessenger" Version="1.0.4"/>
    <PackageReference Include="ZeroMessenger.DependencyInjection" Version="1.0.4"/>
    <PackageReference Include="ZeroMessenger.R3" Version="1.0.4"/>
    <PackageReference Include="Zio" Version="0.21.3"/>
    <PackageReference Include="ZLogger" Version="2.5.10"/>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SbModbus.SerialPortStream\SbModbus.SerialPortStream.csproj" />
    <ProjectReference Include="..\SbModbus.TcpStream\SbModbus.TcpStream.csproj" />
    <ProjectReference Include="..\SbModbus\SbModbus.csproj" />
  </ItemGroup>
</Project>
