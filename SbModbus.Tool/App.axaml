<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"

             x:Class="SbModbus.Tool.App">
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

  <Application.Resources>
    <ResourceDictionary>
      <FontFamily x:Key="SarasaFonts">/Assets/Fonts#等距更纱黑体 SC</FontFamily>
      <FontFamily x:Key="MaterialDesignFonts">/Assets/Fonts#等距更纱黑体 SC</FontFamily>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="/Resources/ValueConverter.axaml" />
        <ResourceInclude Source="/Resources/Language.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

  <Application.Styles>
    <themes:MaterialTheme BaseTheme="Light" PrimaryColor="BlueGrey" SecondaryColor="Teal" />
    <StyleInclude Source="/Resources/BaseStyle.axaml" />
  </Application.Styles>
</Application>